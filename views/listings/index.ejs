<% layout('layouts/boilerplate') %>
<body>
    <h3>All listings</h3>
    <!-- <form action="/listings/new" method="get">
        <button >New Listing</button> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1">
    <% for(let listing of listings) { %>
        <a href="/listings/<%=listing._id%>"  class="listing-link">
<div class="card col" >
  <img src="<%= listing.image %>" name="listing.image" class="card-img-top" alt="listing-image"style="height: 20rem;">
   <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
        <%= listing.title %><br>
        <%= listing.location %><br>
       &#8377;<%= listing.price != null ? listing.price.toLocaleString("en-IN") : 'Price not available' %><br>/night


    </p>
  </div>
 </div>
 <% } %> 
</div>
</a>
</body>

   
